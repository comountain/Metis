<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.activity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <uses-feature
        android:name="org.apache.http.legacy"
        android:required="false" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.RoomActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FriendActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CreateRoomActivity"
            android:exported="false"
            android:label="@string/title_activity_create_room"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".activity.lsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MyActivity"
            android:exported="false" />
        <activity
            android:name=".activity.WaitActivity"
            android:exported="false" />
        <activity
            android:name=".activity.NumActivity"
            android:exported="false"
            android:label="@string/title_activity_num"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".activity.MarketActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activity.InfoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.GradeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.AnswerActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FieldChooseActivity"
            android:exported="false" />
        <activity
            android:name=".activity.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="false" />
    </application>

</manifest>